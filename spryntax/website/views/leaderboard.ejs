<!DOCTYPE html>
<html lang="en">
<head>
    <title>Leaderboard</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@200..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/bootstrap.css">
    <link rel="stylesheet" href="/spryntax.css">
    <script src="/jquery-3.7.1.min.js"></script>
    <script src="/spryntax_main.js"></script>
</head>
<style>
    table, th, td {
        border:1px solid white;
        margin: 0px auto;
        width: 100px;
        height: 50px;
        text-align: center;
    }
    button { 
        width: 100px;
        height: 50px;
        font-size: 15px;
        font-weight: bold;
    }
</style>

<body>
    <header>
        <div class="nav-container">
          <nav>
            <div class="nav-left">
              <!-- Spryntax: using white-to-cyan for default -->
              <a href="/" class="logo" data-gradient="linear-gradient(130deg, cyan, cyan)">Spryntax</a>
              <a href="/level_select" data-gradient="linear-gradient(130deg, cyan, lime)">Level Select</a>
              <a href="/favorites" data-gradient="linear-gradient(130deg, rgb(43, 255, 0), rgb(247, 255, 4))">Favorites</a>
              <a href="/stats" data-gradient="linear-gradient(130deg, rgb(247, 255, 4), rgb(255, 132, 0))">Stats</a>
              <a href="/leaderboard" data-gradient="linear-gradient(130deg, rgb(255, 132, 0), rgb(255, 0, 0))">Leaderboard</a>
              <a href="/report" data-gradient="linear-gradient(130deg, rgb(255, 0, 0), rgb(255, 0, 208))">Report</a>
            </div>
            <div class="nav-right">
              <a href="/settings" data-gradient="linear-gradient(130deg, rgb(255, 0, 208), rgb(81, 0, 255))">Settings</a>
              <% if (username && username !== 'undefined') { %>
                <a href="#" data-gradient="linear-gradient(130deg, rgb(81, 0, 255), rgb(0, 247, 255))">Welcome <%= username %>!</a>
              <% } else { %>
                <a href="/signup" data-gradient="linear-gradient(130deg, rgb(81, 0, 255), rgb(0, 247, 255))">Sign up</a>
                <a href="/login" data-gradient="linear-gradient(130deg, cyan, lime)">Log in</a>
              <% } %>
            </div>
            <div id="indicator"></div>
          </nav>
        </div>
    </header>

    <h1 class="gradient-text" data-text="Leaderboard">Leaderboard</h1>
    
    <!-- have buttons for python and c++ -->
    <div style="margin: 0 auto; width: 656px; text-align:center">
        <button class="all-button" onclick="filterLeaderboard('all')">All</button>
        <button class="python-button" id = "python-button" onclick="filterLeaderboard('Python')">Python </button>
        <button class="c++-button" onclick="filterLeaderboard('C++')">C++</button>
    </div>
    
    <h3 style="text-align:center">Leaderboard with all stats</h3>
    <div class="leaderboard-table">
        <table id="leaderboard-table" style="width:50%">
            <thead>

                <tr>
                    <th>Rank</th>
                    <th>Username</th>
                    <th>Score (WPM)</th>
                    <th class = "language">Language</th>
                </tr>
            </thead>

            <tbody>
                <% leaderboards.forEach(entry => { %>
                     <tr class="leaderboard-row" data-language="<%= entry.program_language %>">
                        <td><%= entry.rank_place %></td>
                        <td><%= entry.username %></td>
                        <td><%= entry.wpm %></td>
                        <td class = "language"><%= entry.program_language %></td>
                    </tr>
                    
                    <!--<td><%= entry.program_language %></td>-->
                <% }); %>
            </tbody>
        </table>
    </div>

    <script>
        function filterLeaderboard(language) {
            let rows = document.querySelectorAll(".leaderboard-row");
            let h3 = document.querySelector("h3");
            let languageHeader = document.querySelector("th.language");
            let languageRow = document.querySelectorAll("td.language");

            rows.forEach(row => {
                if (row.getAttribute("data-language") === language) {
                    row.style.display = "";
                    
                } else {
                    row.style.display = "none";
                    languageHeader.style.display = "none";
                    languageRow.forEach(cell => cell.style.display = "none");
                  
                }
            });
            //resets the table if all button is used
            if (language === 'all') {
                rows.forEach(row => {
                    row.style.display = ""; 

                    languageHeader.style.display = "";
                    languageRow.forEach(cell => cell.style.display = "");
                });
                h3.textContent = "Leaderboard with all stats";
                return;
            }

            if (language === 'Python') {
                h3.textContent = "Python Leaderboard";
            } else if (language === 'C++') {
                h3.textContent = "C++ Leaderboard";
            }
        }
    </script>
</body>
</html>