<!DOCTYPE html>
<html lang="en">
<head>
    <title>Leaderboard</title>
    <link rel="stylesheet" href="spryntax.css">
    <script src="spryntax_main.js"></script>
</head>
<style>
    table, th, td {
        border:1px solid white;
        margin: 0px auto;
        width: 100px;
        height: 50px;
        text-align: center;
    }
    button { 
        width: 100px;
        height: 50px;
        font-size: 15px;
        font-weight: bold;
    }
</style>

<body>
    <header>
        <div class="top">
            <nav> 
                <a href="/">Home</a>
                <a href="/level_select">Level Select</a>
                <a href="/favorites">Favorites</a>
                <a href="/stats">Stats</a>
                <a href="/leaderboard">Leaderboard</a>
                <a href="/report">Report</a>
                <a href="/settings" class="split">Settings</a>
                <a href="/signup" class="split">Sign up</a>
                <a href="/login" class="split">Log in</a>
            </nav>
        </div>
    </header>

    <h1 class="gradient-text" data-text="Leaderboard">Leaderboard</h1>
    
    <!-- have buttons for python and c++ -->
    <div style="margin: 0 auto; width: 656px; text-align:center">
        <button class="python-button" id = "python-button" onclick="filterLeaderboard('Python')">Python </button>
        <button class="c++-button" onclick="filterLeaderboard('C++')">C++</button>
    </div>
    
    <h3 style="text-align:center">Leaderboard with all stats</h3>
    <div class="leaderboard-table">
        <table id="leaderboard-table" style="width:50%">
            <thead>

                <tr>
                    <th>Rank</th>
                    <th>Username</th>
                    <th>Score (WPM)</th>
                </tr>
            </thead>

            <tbody>
                <% leaderboards.forEach(entry => { %>
                     <tr class="leaderboard-row" data-language="<%= entry.program_language %>">
                        <td><%= entry.rank_place %></td>
                        <td><%= entry.username %></td>
                        <td><%= entry.wpm %></td>
                    </tr>
                    
                    <!--<td><%= entry.program_language %></td>-->
                <% }); %>
            </tbody>
        </table>
    </div>

    <script>
        function filterLeaderboard(language) {
            let rows = document.querySelectorAll(".leaderboard-row");
            let h3 = document.querySelector("h3");

            rows.forEach(row => {
                if (row.getAttribute("data-language") === language) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });

            if (language === 'Python') {
                h3.textContent = "Python Leaderboard";
            } else if (language === 'C++') {
                h3.textContent = "C++ Leaderboard";
            }
        }
    </script>
</body>
</html>