<!DOCTYPE html>
<html lang="en">
<head>
    <title>Browse Algorithms</title>
    <link rel="stylesheet" href="spryntax.css">
    <script src="spryntax_main.js"></script>
</head>
<body>
    <header>
        <div class="top">
            <nav> 
                <a href="/">Home</a>
                <a href="/level_select">Level Select</a>
                <a href="/leaderboard">Leaderboard</a>
                <a href="/report">Report</a>
                <a href="/settings" class="split">Settings</a>
                <a href="/signup" class="split">Sign up</a>
                <a href="/login" class="split">Log in</a>
            </nav>
        </div>
    </header>
    <h2>Level select</h2>
    <!-- Help Button and Help Text -->
    <button class="help-button" onclick="toggleHelp()">Help</button>
    <div id="help-text" class="help-text hidden">
        Use the search options below to find algorithms by name, difficulty, data structure use case or approach/technique
    </div>

    <!-- Search Options -->
    <div class="search-options">
        <input type="text" id="search-name" placeholder="Search by name"> 
        <select id="search-difficulty">
            <option value="all">Any Difficulty</option>
            <option value="easy">Easy</option>
            <option value="medium">Medium</option>
            <option value="hard">Hard</option>
        </select>
        <select id="search-data_structure">
            <option value="all">All Categories</option>
            <option value="array">Array</option>
            <option value="link_list">Link List</option>
            <option value="tree">Tree</option>
        </select>

         <select id="search-approach">
            <option value="all">All Categories</option>
            <option value="brute_force">Brute Force</option>
            <option value="divide-conquer">Divide and Conquer</option>
            <option value="greedy">Greedy</option>
        </select>       

        <button>Search</button>
    </div>

    <!-- Algorithm List -->
    <div class="gray-background">
    <div class="card-container">
        <% algorithms.forEach(algorithm => { %>
          <div class="custom-card">
            <div class="card-header">
                <h3><%= algorithm.algorithm_name %></h3>
            </div>
            <p><strong>Difficulty:</strong> <%= algorithm.difficulty %></p>
            <p><strong>Data Structure:</strong> <%= algorithm.data_structure %></p>
            <p><strong>Approach:</strong> <%= algorithm.approach %></p>
          </div>
        <% }); %>
    </div>
    </div>
</body>
</html>
